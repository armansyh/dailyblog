<%- include("partials/header"); -%>

<%postContent.forEach(element => {%>
	<h1><%= element.title %></h1>
    <p><%= element.content %></p>
    <div class="button-div-div">
        <button class="btn btn-primary button-div" data-toggle="modal" data-target="#update">Update</button>
        <form action="/delete" method="post" style="display: inline;">
            <!-- <button class="btn btn-primary button-div" type="submit" name="postbtn" value="update">Update</button> -->
            <button class="btn btn-danger button-div" type="submit" name="postbtn" value=<%= element._id %>>Delete</button>
        </form>
    </div>
    <div class="modal fade" id="update">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Update</h4>
                </div>
                <div class="modal-body">
                    <form action="/update" method="post" autocomplete="off">
                        <div class="form-group">
                            <input type="hidden" name="id" value=<%= element._id %>>
                            <label>Title</label>
                            <input type="text" class="form-control" name="postTitle" value="<%= element.title %>" required />
                            <label>Post</label>
                            <textarea class="form-control" name="postBody" rows="5" required ><%= element.content %></textarea>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" name="buttonPub">Update</button>
                </form>
                </div>
            </div>
        </div>
    </div>
    
<%});%>

